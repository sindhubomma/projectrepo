pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/sindhubomma/projectrepo.git'
            }
        }
        stage('Build and Test') {
            steps {
                // Example for Maven build
                sh 'mvn clean install'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                sshagent(['01426472-5bb9-4462-840f-681c7355ef5b']) {
                    sh 'ansible-playbook -i inventory playbook.yml'
                }
            }
        }
        stage('Pull Docker Image') {
            steps {
                sshagent(['eff72ade-363e-448d-86a3-f54ddb6c185d']) {
                    sh 'ssh master@Webserver "docker pull your-docker-image:latest"'
                }
            }
        }
        stage('Deploy Application') {
            steps {
                sshagent(['eff72ade-363e-448d-86a3-f54ddb6c185d']) {
                    sh 'ssh master@Webserver "docker run -d --name app your-docker-image:latest"'
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'Deployment Failed!'
        }
    }
}
